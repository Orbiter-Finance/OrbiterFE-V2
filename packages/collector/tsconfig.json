{
    "extends": "@orbiter-finance/typescript-config/react-library.json",
    "compilerOptions": {
        "jsx": "react-jsx",
        "target": "es5",
        "lib": ["dom", "es2015", "es2017", "es2021", "esnext"],
        "types": ["react", "react-dom"],
        "forceConsistentCasingInFileNames": true,
        "allowSyntheticDefaultImports": true,
        "baseUrl": "./",
        "module": "ESNext",
        "preserveSymlinks": false,
        "moduleResolution": "node",
        "outDir": "./dist",
        "declarationDir": "./dist",
        "emitDeclarationOnly": true,
        "importHelpers": true
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist"]
}
